---
import BaseHead from '../components/layout/BaseHead.astro';
import Header_2 from '../components/layout/Header_2.astro';
import '../styles/global.css';
import '../styles/value-v2.css';

interface Props {
  title?: string;
  description?: string;
  canonicalPath?: string;
}

const { title, description, canonicalPath } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} canonicalPath={canonicalPath} />
    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>
  <body class="v2-body font-sans">
    <Header_2 />
    <main>
      <slot />
    </main>
    <footer class="border-t border-slate-700/40 py-8 text-center text-sm text-slate-400">
      <p>&copy; {new Date().getFullYear()} Wilson Cely. All rights reserved.</p>
    </footer>
  </body>
</html>
