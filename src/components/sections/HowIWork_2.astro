---
import { siteConfig } from '../../data/site-config';

const { howIWork } = siteConfig.valuePageV2;
---

<section id="how-i-work" class="v2-section border-b border-slate-700/30" aria-labelledby="how-i-work-heading">
  <div class="v2-shell">
    <div class="mx-auto max-w-3xl text-center">
      <p class="v2-kicker">How I Work</p>
      <h2 id="how-i-work-heading" class="v2-title">{howIWork.title}</h2>
      <p class="v2-lead">{howIWork.subtitle}</p>
    </div>

    <div class="mt-10 v2-grid md:grid-cols-2 lg:grid-cols-4">
      {howIWork.steps.map((step) => (
        <article class="v2-card p-5">
          <p class="text-sm font-semibold uppercase tracking-[0.16em] text-sky-300">Step {step.number}</p>
          <h3 class="mt-3 text-xl font-semibold text-white">{step.title}</h3>
          <p class="mt-3 text-sm leading-6 text-slate-300">{step.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
