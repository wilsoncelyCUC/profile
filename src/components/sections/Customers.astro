---
import { readdir } from 'node:fs/promises';
import { join } from 'node:path';

const customersDir = join(process.cwd(), 'public/images/customers');
let logos: string[] = [];

try {
  const files = await readdir(customersDir);
  logos = files
    .filter((file) => /\.(png|jpg|jpeg|svg|webp)$/i.test(file))
    .map((file) => `/images/customers/${file}`);
} catch {
  logos = [];
}

const duplicatedLogos = [...logos, ...logos];
---

{logos.length > 0 && (
  <section id="customers" class="customers-section">
    <div class="customers-bg-layer"></div>
    <div class="customers-grain"></div>

    <div class="customers-container">
      <div class="customers-header">
        <p class="customers-kicker">Trusted By</p>
        <h2 class="customers-title">
          Powering Innovation for<br />
          <span class="title-gradient">Enterprise Leaders</span>
        </h2>
        <p class="customers-subtitle">
          Automotive · Telecommunications · Fintech · Digital Products
        </p>
      </div>

      <div class="customers-carousel-wrapper">
        <div class="carousel-fade carousel-fade-left"></div>
        <div class="carousel-fade carousel-fade-right"></div>

        <div class="customers-carousel">
          {duplicatedLogos.map((logo) => (
            <div class="logo-item">
              <img
                src={logo}
                alt="Customer logo"
                class="logo-image"
                loading="lazy"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
)}

<style>
  .customers-section {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
    border-bottom: 1px solid rgba(56, 189, 248, 0.15);
  }

  /* Layered background with depth */
  .customers-bg-layer {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 120% 80% at 50% -20%, rgba(14, 116, 144, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 20% 80%, rgba(56, 189, 248, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 60%, rgba(14, 116, 144, 0.12) 0%, transparent 50%),
      linear-gradient(180deg, #070b14 0%, #0a1120 50%, #070b14 100%);
    z-index: 0;
  }

  /* Subtle grain texture for premium feel */
  .customers-grain {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.03'/%3E%3C/svg%3E");
    opacity: 0.4;
    mix-blend-mode: overlay;
    pointer-events: none;
    z-index: 1;
  }

  .customers-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    z-index: 2;
  }

  /* Header Section */
  .customers-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .customers-kicker {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #7dd3fc;
    margin-bottom: 1.25rem;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s forwards;
  }

  .customers-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.15;
    color: #f4f7fb;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.4s forwards;
  }

  .title-gradient {
    background: linear-gradient(135deg, #38bdf8 0%, #0ea5e9 50%, #7dd3fc 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientShift 8s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .customers-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    color: #9fb0c9;
    font-weight: 400;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.6s forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Carousel Section */
  .customers-carousel-wrapper {
    position: relative;
    margin-top: 3rem;
    padding: 2rem 0;
  }

  .carousel-fade {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 200px;
    z-index: 10;
    pointer-events: none;
  }

  .carousel-fade-left {
    left: 0;
    background: linear-gradient(90deg,
      #070b14 0%,
      rgba(7, 11, 20, 0.9) 20%,
      rgba(7, 11, 20, 0.5) 60%,
      transparent 100%
    );
  }

  .carousel-fade-right {
    right: 0;
    background: linear-gradient(-90deg,
      #070b14 0%,
      rgba(7, 11, 20, 0.9) 20%,
      rgba(7, 11, 20, 0.5) 60%,
      transparent 100%
    );
  }

  .customers-carousel {
    display: flex;
    align-items: center;
    gap: 4rem;
    animation: infiniteScroll 40s linear infinite;
    will-change: transform;
  }

  .customers-carousel:hover {
    animation-play-state: paused;
  }

  @keyframes infiniteScroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .logo-item {
    flex-shrink: 0;
    min-width: 220px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid rgba(56, 189, 248, 0.2);
    border-radius: 0.75rem;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(8px);
  }

  .logo-item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at center,
      rgba(56, 189, 248, 0.12) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .logo-item:hover {
    transform: translateY(-4px) scale(1.02);
    border-color: rgba(56, 189, 248, 0.4);
    background: rgba(30, 41, 59, 0.7);
    box-shadow:
      0 0 0 1px rgba(56, 189, 248, 0.3),
      0 12px 40px rgba(0, 0, 0, 0.4),
      0 0 60px rgba(56, 189, 248, 0.2);
  }

  .logo-item:hover::before {
    opacity: 1;
  }

  .logo-image {
    width: auto;
    height: 70px;
    max-width: 200px;
    object-fit: contain;
    filter: grayscale(100%) brightness(0) invert(1);
    opacity: 0.9;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    drop-shadow: 0 2px 8px rgba(255, 255, 255, 0.1);
  }

  .logo-item:hover .logo-image {
    filter: grayscale(0%) brightness(1.1) invert(0);
    opacity: 1;
    transform: scale(1.08);
    drop-shadow: 0 4px 16px rgba(56, 189, 248, 0.3);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .customers-section {
      padding: 4rem 0;
    }

    .customers-header {
      margin-bottom: 3rem;
    }

    .customers-title {
      font-size: 2rem;
    }

    .customers-subtitle {
      font-size: 0.9375rem;
    }

    .carousel-fade {
      width: 80px;
    }

    .customers-carousel {
      gap: 2rem;
    }

    .logo-item {
      min-width: 160px;
      height: 80px;
    }

    .logo-image {
      height: 50px;
      max-width: 140px;
    }
  }
</style>
