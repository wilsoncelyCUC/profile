---
import { resolveBookingUrl, siteConfig } from '../../data/site-config';

const bookingUrl = resolveBookingUrl(siteConfig.hero.primaryCta.href);
const secondaryHref = siteConfig.hero.secondaryCta.href;
---

<section id="hero" class="section-shell relative overflow-hidden border-b border-navy-800 pt-36">
  <div class="content-shell">
    <div class="grid items-center gap-12 lg:grid-cols-[1.15fr_0.85fr]">
      <div>
        <p class="mb-4 font-mono text-sm font-semibold uppercase tracking-[0.2em] text-cyan-400">AI Productization for Enterprises</p>
        <h1 class="text-4xl font-extrabold leading-tight tracking-tight text-white sm:text-5xl lg:text-6xl">
          {siteConfig.hero.headline}
        </h1>
        <p class="mt-6 max-w-2xl text-lg leading-relaxed text-slate-200">{siteConfig.hero.subheadline}</p>

        <div class="mt-8 flex flex-wrap gap-4">
          <a href={bookingUrl} target="_blank" rel="noopener noreferrer" class="btn-primary">
            {siteConfig.hero.primaryCta.text}
          </a>
          <a href={secondaryHref} class="btn-secondary">{siteConfig.hero.secondaryCta.text}</a>
        </div>

        <div class="mt-10 grid gap-4 sm:grid-cols-3">
          {siteConfig.hero.stats.map((stat) => (
            <div class="surface-card p-4">
              <p class="font-mono text-2xl font-bold text-cyan-400">{stat.value}</p>
              <p class="mt-1 text-sm text-slate-400">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="mx-auto w-full max-w-md lg:mx-0 lg:ml-auto">
        <div class="rounded-2xl border border-cyan-500/20 bg-navy-900 p-3 shadow-glow">
          <img
            src="/profile/images/wilson-hero.jpeg"
            alt="Wilson Cely"
            class="h-full w-full rounded-xl object-cover"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>
