---
import { resolveBookingUrl, siteConfig } from '../../data/site-config';

const bookingUrl = resolveBookingUrl(siteConfig.bookingUrl);
const emailHref = `mailto:${siteConfig.email}`;
---

<section id="contact" class="section-shell bg-navy-900">
  <div class="content-shell">
    <div class="surface-card mx-auto max-w-4xl border-cyan-500/30 bg-gradient-to-br from-navy-900 to-navy-800 p-8 text-center lg:p-12">
      <p class="font-mono text-xs uppercase tracking-[0.25em] text-cyan-400">Contact</p>
      <h2 class="mt-4 text-3xl font-bold sm:text-4xl">{siteConfig.contact.headline}</h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-300">{siteConfig.contact.subheadline}</p>

      <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
        <a href={bookingUrl} target="_blank" rel="noopener noreferrer" class="btn-primary">
          {siteConfig.contact.ctaText}
        </a>
        <a href={emailHref} class="btn-secondary">Email Directly</a>
      </div>
    </div>
  </div>
</section>
