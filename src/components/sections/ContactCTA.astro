---
import { siteConfig } from '../../data/site-config';

const { contact } = siteConfig;

// Build mailto link with prefilled subject
const mailtoHref = `mailto:${contact.email}?subject=${encodeURIComponent('Inquiry: AI Value Delivery Services')}&body=${encodeURIComponent('Hi Wilson,\n\nI am interested in discussing how you can help with my AI initiative.\n\nBest regards,')}`;
---

<section id="contact" class="py-24 bg-brand-gray">
  <div
    class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
    x-data="{ visible: false }"
    x-intersect:enter="visible = true"
    :class="{ 'opacity-100 translate-y-0': visible, 'opacity-0 translate-y-8': !visible }"
  >
    <h2 class="text-3xl sm:text-4xl font-black text-white mb-4 transition-all duration-700">
      {contact.headline}
    </h2>

    <p class="text-xl text-white/80 mb-10 max-w-2xl mx-auto transition-all duration-700 delay-100">
      {contact.subheadline}
    </p>

    <a
      href={mailtoHref}
      class="inline-block bg-brand-green text-white px-10 py-4 rounded font-bold text-lg hover:bg-white hover:text-brand-gray transition-colors shadow-lg hover:shadow-xl"
    >
      {contact.ctaText}
    </a>

    <!-- Pluggable form placeholder for future Formspree integration -->
    <!--
    <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="max-w-md mx-auto mt-8">
      <input type="email" name="email" placeholder="Your email" required class="w-full px-4 py-3 rounded mb-4" />
      <textarea name="message" placeholder="Your message" rows="4" required class="w-full px-4 py-3 rounded mb-4"></textarea>
      <button type="submit" class="w-full bg-brand-green text-white px-6 py-3 rounded font-bold">Send</button>
    </form>
    -->
  </div>
</section>
