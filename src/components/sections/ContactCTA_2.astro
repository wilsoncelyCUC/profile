---
import { resolveBookingUrl, siteConfig } from '../../data/site-config';

const bookingUrl = resolveBookingUrl(siteConfig.bookingUrl);
const emailHref = `mailto:${siteConfig.email}`;
const { contact } = siteConfig.valuePageV2;
---

<section id="contact" class="v2-section" aria-labelledby="contact-heading">
  <div class="v2-shell">
    <div class="v2-card-soft mx-auto max-w-4xl p-8 text-center lg:p-12">
      <p class="v2-kicker">Contact</p>
      <h2 id="contact-heading" class="v2-title">{contact.title}</h2>
      <p class="v2-lead mx-auto max-w-2xl">{contact.subtitle}</p>

      <div class="mt-8 flex flex-wrap items-center justify-center gap-3">
        <a href={bookingUrl} target="_blank" rel="noopener noreferrer" class="v2-btn-primary">
          {contact.primaryCtaText}
        </a>
        <a href={emailHref} class="v2-btn-secondary">{contact.secondaryCtaText}</a>
      </div>
    </div>
  </div>
</section>
