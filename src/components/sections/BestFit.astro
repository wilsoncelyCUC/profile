---
import { siteConfig } from '../../data/site-config';

const { bestFit } = siteConfig;
---

<section id="best-fit" class="section-shell border-b border-navy-800">
  <div class="content-shell">
    <div class="mb-10 text-center">
      <p class="font-mono text-xs uppercase tracking-[0.25em] text-cyan-400">Qualification</p>
      <h2 class="mt-3 text-3xl font-bold sm:text-4xl">{bestFit.title}</h2>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
      <article class="surface-card border-l-2 border-l-cyan-500 p-7">
        <h3 class="text-2xl font-semibold text-white">{bestFit.bestFitTitle}</h3>
        <ul class="mt-5 space-y-3 text-sm text-slate-300">
          {bestFit.bestFitItems.map((item) => (
            <li class="flex gap-3"><span class="mt-1 text-cyan-400">✓</span><span>{item}</span></li>
          ))}
        </ul>
      </article>

      <article class="surface-card border-l-2 border-l-slate-600 p-7">
        <h3 class="text-2xl font-semibold text-white">{bestFit.notFitTitle}</h3>
        <ul class="mt-5 space-y-3 text-sm text-slate-400">
          {bestFit.notFitItems.map((item) => (
            <li class="flex gap-3"><span class="mt-1 text-slate-500">×</span><span>{item}</span></li>
          ))}
        </ul>
      </article>
    </div>
  </div>
</section>
