---
import { siteConfig } from '../../data/site-config';

const { thoughtLeadership } = siteConfig;
const latestPosts = thoughtLeadership?.newsletter?.latestPosts || [];
---

<section id="thought-leadership" class="py-24 bg-bg-light">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary rounded-full text-sm font-mono tracking-wide mb-4">
        {thoughtLeadership?.badge || "IN THE ARENA"}
      </span>
      <h2 class="text-3xl sm:text-4xl font-black text-text-dark mb-4">
        {thoughtLeadership?.headline || "Where Strategy Meets Action"}
      </h2>
      <p class="text-xl text-text-dark/70 max-w-2xl mx-auto">
        {thoughtLeadership?.subheadline || "Join the conversation at the intersection of technology, business, and execution."}
      </p>
    </div>

    <!-- Horizontally Aligned Cards Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 lg:gap-6">

      <!-- Newsletter Card -->
      <div class="col-span-1">
        <div class="h-full bg-white rounded-2xl p-8 lg:p-10 relative overflow-hidden border border-primary-light/50 shadow-sm hover:shadow-md hover:border-primary/30 transition-all">
          <!-- Floating Subscriber Badge -->
          <div class="absolute -top-2 -right-2 lg:top-4 lg:right-4 z-20">
            <div class="float-badge bg-primary text-white px-4 py-2 rounded-xl flex items-center gap-2 shadow-lg">
              <span class="text-2xl lg:text-3xl font-black">{thoughtLeadership?.newsletter?.subscribersShort || "15K+"}</span>
              <span class="text-xs uppercase tracking-wider opacity-90">Readers</span>
            </div>
          </div>

          <!-- Background Pattern -->
          <div class="absolute top-0 right-0 w-1/2 h-full opacity-[0.03] pointer-events-none">
            <svg viewBox="0 0 200 200" class="w-full h-full">
              <pattern id="newsletter-grid" width="20" height="20" patternUnits="userSpaceOnUse">
                <path d="M 20 0 L 0 0 0 20" fill="none" stroke="currentColor" stroke-width="0.5" class="text-primary"/>
              </pattern>
              <rect width="100%" height="100%" fill="url(#newsletter-grid)"/>
            </svg>
          </div>

          <div class="relative z-10">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 rounded-xl bg-primary-light flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <a
                  href={thoughtLeadership?.newsletter?.link || "#"}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-xl lg:text-2xl font-bold text-text-dark hover:text-primary transition-colors"
                >
                  {thoughtLeadership?.newsletter?.title || "AI Rev Hub"}
                </a>
                <p class="text-sm text-text-dark/60">{thoughtLeadership?.newsletter?.tagline || "Strategic AI insights for practitioners"}</p>
              </div>
            </div>

            <p class="text-text-dark/80 mb-6 text-lg leading-relaxed">
              {thoughtLeadership?.newsletter?.description || "Bridging the gap between high-level strategy and production reality. No fluffâ€”just battle-tested insights from someone who ships."}
            </p>

            <!-- Latest Posts Feed (Interactive Ticker) -->
            {latestPosts.length > 0 && (
              <div class="mb-8 p-4 bg-bg-light rounded-xl border border-primary-light/30">
                <div class="flex items-center gap-2 mb-3">
                  <span class="w-2 h-2 bg-primary rounded-full animate-pulse"></span>
                  <span class="text-xs font-semibold text-primary uppercase tracking-wide">Latest Thinking</span>
                </div>
                <ul class="space-y-2">
                  {latestPosts.map((post: { title: string; link: string }) => (
                    <li>
                      <a
                        href={post.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex items-center gap-2 text-text-dark/80 hover:text-primary transition-colors"
                      >
                        <svg class="w-4 h-4 text-primary/50 group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        <span class="text-sm font-medium">{post.title}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Newsletter Signup -->
            <form class="flex flex-col sm:flex-row gap-3 mb-6">
              <input
                type="email"
                placeholder="your@email.com"
                class="flex-1 px-4 py-3 bg-bg-light border border-primary-light rounded-xl text-text-dark placeholder-text-dark/40 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all"
              />
              <button
                type="submit"
                class="magnetic-btn px-6 py-3 bg-primary text-white font-semibold rounded-xl hover:bg-primary/90 transition-all group flex items-center justify-center gap-2"
              >
                <span>Subscribe</span>
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </button>
            </form>

            <p class="text-sm text-text-dark/50">
              Join {thoughtLeadership?.newsletter?.subscribers || "15,000+"} technology leaders. Unsubscribe anytime.
            </p>
          </div>
        </div>
      </div>

      <!-- Community Card (Munich MLOps) -->
      <div class="col-span-1 h-full">
        <div class="h-full bg-white rounded-2xl p-6 lg:p-8 relative overflow-hidden border-l-4 border-primary shadow-sm hover:shadow-md transition-all flex flex-col">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-primary-light flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <a
                href={thoughtLeadership?.community?.link || "#"}
                target="_blank"
                rel="noopener noreferrer"
                class="text-lg font-bold text-text-dark hover:text-primary transition-colors"
              >
                {thoughtLeadership?.community?.title || "Munich MLOps Community"}
              </a>
            </div>
            <span class="text-3xl lg:text-4xl font-black text-primary">{thoughtLeadership?.community?.membersShort || "40K+"}</span>
          </div>

          <p class="text-text-dark/70 text-sm mb-4">
            {thoughtLeadership?.community?.description || "Where practitioners share wins, failures, and everything in between."}
          </p>

          <a
            href={thoughtLeadership?.community?.link || "#"}
            target="_blank"
            rel="noopener noreferrer"
            class="mt-auto inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors text-sm font-medium group"
          >
            <span>Join the community</span>
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Event Card (Munich MLOps Meetup #21) - Glassmorphism -->
      <div class="col-span-1 h-full">
        <div class="h-full glass-event-card rounded-2xl p-6 lg:p-8 relative overflow-hidden flex flex-col">
          <!-- Urgency Pill -->
          <div class="absolute top-4 right-4">
            <span class="pulse-pill inline-flex items-center gap-1.5 px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-medium border border-amber-200">
              <span class="w-1.5 h-1.5 bg-amber-500 rounded-full animate-pulse"></span>
              Seats Filling Fast
            </span>
          </div>

          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-white/80 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <a
                href={thoughtLeadership?.event?.link || "#"}
                target="_blank"
                rel="noopener noreferrer"
                class="text-lg font-bold text-text-dark hover:text-primary transition-colors"
              >
                {thoughtLeadership?.event?.title || "Munich MLOps Meetup #21"}
              </a>
              <p class="text-sm text-primary font-mono font-semibold">{thoughtLeadership?.event?.date || "Jan 28, 2026"}</p>
            </div>
          </div>

          <p class="text-text-dark/80 mb-6 font-medium">
            {thoughtLeadership?.event?.description || "Gen AI at Scale: From Lambda Struggles to Bedrock Agents"}
          </p>

          <div class="mt-auto flex items-center justify-between">
            <div class="flex items-center gap-2">
              <span class="text-sm text-text-dark/60 font-medium">{thoughtLeadership?.event?.spotsLeft || "4 spots left"}</span>
            </div>
            <a
              href={thoughtLeadership?.event?.link || "#"}
              target="_blank"
              rel="noopener noreferrer"
              class="magnetic-btn inline-flex items-center gap-2 px-5 py-2.5 bg-primary text-white font-semibold rounded-xl hover:bg-primary/90 transition-all group"
            >
              <span>RSVP</span>
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

    </div>

    <!-- Philosophy Footer - "Two Speeds" Quote (Bottom Right Aligned) -->
    <div class="mt-12 flex justify-end">
      <p class="text-text-dark/50 italic text-sm max-w-md text-right">
        "{thoughtLeadership?.philosophy || "AI moves at two speeds: the speed of research and the speed of production. We live in the second."}"
      </p>
    </div>
  </div>
</section>

<style>
  /* Float Animation (The "Breathe" Effect) */
  .float-badge {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  /* Pulse Pill Animation */
  .pulse-pill {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.3);
    }
    50% {
      box-shadow: 0 0 0 6px rgba(245, 158, 11, 0);
    }
  }

  /* Glassmorphism Event Card */
  .glass-event-card {
    background: linear-gradient(135deg, rgba(43, 168, 163, 0.08) 0%, rgba(179, 233, 230, 0.25) 100%);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(43, 168, 163, 0.25);
    box-shadow: 0 8px 32px rgba(43, 168, 163, 0.1);
    transition: all 0.3s ease;
  }

  .glass-event-card:hover {
    border-color: rgba(43, 168, 163, 0.4);
    box-shadow: 0 12px 40px rgba(43, 168, 163, 0.15);
    transform: translateY(-2px);
  }

  /* Magnetic Button Enhancement */
  .magnetic-btn {
    position: relative;
    overflow: hidden;
  }

  .magnetic-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transform: translateX(-100%);
    transition: transform 0.5s ease;
  }

  .magnetic-btn:hover::before {
    transform: translateX(100%);
  }
</style>
