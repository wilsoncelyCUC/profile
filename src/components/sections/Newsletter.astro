---
import { siteConfig } from '../../data/site-config';

const { newsletter } = siteConfig;
---

<section id="newsletter" class="section-shell border-b border-navy-800 py-20">
  <div class="content-shell">
    <div class="surface-card mx-auto max-w-4xl p-8 text-center lg:p-12">
      <p class="font-mono text-sm uppercase tracking-[0.2em] text-cyan-400">Newsletter</p>
      <h2 class="mt-4 text-3xl font-bold sm:text-4xl">{newsletter.headline}</h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-300">{newsletter.description}</p>

      <div class="mt-6 inline-flex items-center gap-2 rounded-full border border-cyan-500/40 bg-cyan-900/20 px-4 py-2">
        <span class="font-mono text-lg font-bold text-cyan-400">{newsletter.subscribersShort}</span>
        <span class="text-sm text-slate-300">subscribers</span>
      </div>

      <p class="mx-auto mt-5 max-w-xl text-sm text-slate-400">{newsletter.socialProof}</p>

      <a href={newsletter.link} target="_blank" rel="noopener noreferrer" class="btn-primary mt-8">
        {newsletter.ctaText}
      </a>
    </div>
  </div>
</section>
