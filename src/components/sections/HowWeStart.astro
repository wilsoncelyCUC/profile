---
import { siteConfig } from '../../data/site-config';

const { howWeStart } = siteConfig;
---

<section id="how-we-work" class="section-shell border-b border-navy-800">
  <div class="content-shell">
    <div class="mx-auto mb-14 max-w-3xl text-center">
      <p class="font-mono text-xs uppercase tracking-[0.25em] text-cyan-400">Methodology</p>
      <h2 class="mt-3 text-3xl font-bold sm:text-4xl">{howWeStart.title}</h2>
      <p class="mt-4 text-lg text-slate-300">{howWeStart.subtitle}</p>
    </div>

    <div class="relative grid gap-6 md:grid-cols-4">
      <div class="absolute left-0 right-0 top-8 hidden h-px bg-navy-700 md:block"></div>
      {howWeStart.steps.map((step) => (
        <article class="surface-card relative p-6">
          <div class="mb-4 inline-flex h-11 w-11 items-center justify-center rounded-full bg-cyan-500 font-mono text-sm font-bold text-white">
            {step.number}
          </div>
          <h3 class="text-xl font-semibold">{step.title}</h3>
          <p class="mt-2 text-sm text-slate-300">{step.description}</p>
        </article>
      ))}
    </div>

    <p class="mx-auto mt-8 max-w-4xl rounded-lg border border-cyan-500/30 bg-cyan-900/20 px-5 py-4 text-center text-sm text-slate-200">
      {howWeStart.capabilityTransfer}
    </p>
  </div>
</section>
