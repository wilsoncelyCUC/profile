---
import { siteConfig } from '../../data/site-config';

const { howWeStart } = siteConfig;
---

<section id="how-we-start" class="py-24 bg-brand-bg">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl sm:text-4xl font-black text-brand-gray text-center mb-16">
      {howWeStart.title}
    </h2>

    <div class="relative">
      <!-- Connecting line (desktop) -->
      <div class="hidden md:block absolute top-8 left-1/2 -translate-x-1/2 w-2/3 h-0.5 bg-brand-green/20"></div>

      <div class="grid md:grid-cols-3 gap-8 md:gap-12">
        {howWeStart.steps.map((step, index) => (
          <div
            x-data="{ visible: false }"
            x-intersect:enter="visible = true"
            :class="{ 'opacity-100 translate-y-0': visible, 'opacity-0 translate-y-8': !visible }"
            class="text-center transition-all duration-700"
            style={`transition-delay: ${index * 200}ms`}
          >
            <div class="relative inline-flex items-center justify-center w-16 h-16 rounded-full bg-brand-green text-white text-2xl font-black mb-6 shadow-lg">
              {step.number}
            </div>

            <h3 class="text-xl font-bold text-brand-gray mb-3">
              {step.title}
            </h3>

            <p class="text-brand-gray/70">
              {step.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
