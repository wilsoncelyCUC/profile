---
import { siteConfig } from '../../data/site-config';

const { problem } = siteConfig.valuePageV2;
---

<section class="v2-section border-b border-slate-700/30" aria-labelledby="problem-heading">
  <div class="v2-shell">
    <div class="max-w-3xl">
      <p class="v2-kicker">Problem</p>
      <h2 id="problem-heading" class="v2-title">{problem.title}</h2>
      <p class="v2-lead">{problem.subtitle}</p>
    </div>

    <div class="mt-10 v2-grid md:grid-cols-3">
      {problem.items.map((item) => (
        <article class="v2-card p-6">
          <h3 class="text-xl font-semibold text-white">{item.title}</h3>
          <p class="mt-3 text-sm leading-6 text-slate-300">{item.detail}</p>
          <p class="mt-4 rounded-lg bg-sky-950/35 px-3 py-2 text-sm font-medium text-sky-200">
            Cost: {item.impact}
          </p>
        </article>
      ))}
    </div>
  </div>
</section>
