---
import { siteConfig } from '../../data/site-config';

const { pillars } = siteConfig;
---

<section id="pillars" class="py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl sm:text-4xl font-black text-brand-gray text-center mb-4">
      The Bridge
    </h2>
    <p class="text-xl text-brand-gray/70 text-center mb-16 max-w-2xl mx-auto">
      I sit at the intersection of three disciplines to drive AI value
    </p>

    <div class="grid md:grid-cols-3 gap-8">
      {pillars.map((pillar, index) => (
        <div
          x-data="{ expanded: false, visible: false }"
          x-intersect:enter="visible = true"
          :class="{ 'opacity-100 translate-y-0': visible, 'opacity-0 translate-y-8': !visible }"
          class="bg-brand-bg rounded-lg p-8 text-center transition-all duration-700 hover:shadow-xl cursor-pointer group"
          style={`transition-delay: ${index * 150}ms`}
          @click="expanded = !expanded"
        >
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-brand-green/10 flex items-center justify-center group-hover:bg-brand-green/20 transition-colors">
            <span class="text-3xl font-black text-brand-green">{pillar.title.charAt(0)}</span>
          </div>

          <h3 class="text-2xl font-bold text-brand-gray mb-3 group-hover:text-brand-green transition-colors">
            {pillar.title}
          </h3>

          <p class="text-brand-gray/80 mb-4">
            {pillar.description}
          </p>

          <div
            x-show="expanded"
            x-cloak
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 max-h-0"
            x-transition:enter-end="opacity-100 max-h-40"
            class="text-left border-t border-brand-gray/10 pt-4 mt-4"
          >
            <ul class="space-y-2">
              {pillar.bullets.map((bullet) => (
                <li class="text-brand-gray/70 flex items-start">
                  <span class="text-brand-green mr-2 mt-1">-</span>
                  <span>{bullet}</span>
                </li>
              ))}
            </ul>
          </div>

          <button class="mt-4 text-brand-green text-sm font-medium">
            <span x-text="expanded ? 'Show less' : 'Learn more'"></span>
            <span x-show="!expanded">+</span>
            <span x-show="expanded" x-cloak>-</span>
          </button>
        </div>
      ))}
    </div>
  </div>
</section>
