---
import { getCollection } from 'astro:content';
import { siteConfig } from '../../data/site-config';
import ServiceCard_2 from '../ui/ServiceCard_2.astro';

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => a.data.order - b.data.order);
const { servicesSection, scopes } = siteConfig.valuePageV2;
---

<section id="services" class="services-editorial border-b border-slate-700/30" aria-labelledby="services-heading">
  <div class="v2-shell">
    <!-- Header -->
    <div class="editorial-header">
      <p class="editorial-kicker">Services</p>
      <h2 id="services-heading" class="editorial-title">{servicesSection.title}</h2>
      <p class="editorial-lead">{servicesSection.intro}</p>
    </div>

    <!-- Definition Accordion -->
    <div class="definition-accordion">
      <button
        class="accordion-item"
        data-accordion="is"
        aria-expanded="false"
        aria-controls="accordion-is-content"
      >
        <div class="accordion-header">
          <span class="accordion-number">01</span>
          <h3 class="accordion-title">{servicesSection.definition.isTitle}</h3>
          <svg class="accordion-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 9l6 6 6-6"/>
          </svg>
        </div>
        <div class="accordion-content" id="accordion-is-content">
          <ul class="accordion-list">
            {servicesSection.definition.isItems.map((item) => (
              <li class="accordion-list-item">
                <span class="list-marker is-marker"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </button>

      <button
        class="accordion-item"
        data-accordion="isnt"
        aria-expanded="false"
        aria-controls="accordion-isnt-content"
      >
        <div class="accordion-header">
          <span class="accordion-number">02</span>
          <h3 class="accordion-title">{servicesSection.definition.isntTitle}</h3>
          <svg class="accordion-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 9l6 6 6-6"/>
          </svg>
        </div>
        <div class="accordion-content" id="accordion-isnt-content">
          <ul class="accordion-list">
            {servicesSection.definition.isntItems.map((item) => (
              <li class="accordion-list-item">
                <span class="list-marker isnt-marker"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </button>
    </div>

    <!-- Scopes Timeline -->
    <div class="scopes-section">
      <div class="scopes-header">
        <h3 class="scopes-title">{servicesSection.coverage.title}</h3>
        <p class="scopes-lead">{servicesSection.coverage.lead}</p>
      </div>

      <div class="scopes-timeline">
        {scopes.map((scope, index) => (
          <button
            id={`scope-${index}`}
            class={`scope-item ${index === 0 ? 'active' : ''}`}
            data-scope={index}
            aria-expanded={index === 0 ? 'true' : 'false'}
            aria-controls={`panel-${index}`}
            type="button"
          >
            <span class="scope-number-badge" aria-hidden="true">{scope.number}</span>
            <div class="scope-visual">
              <span class="scope-node"></span>
              {index < scopes.length - 1 && <span class="scope-line"></span>}
            </div>
            <div class="scope-content">
              <span class="scope-number">Scope {scope.number}</span>
              <h4 class="scope-title">{scope.title}</h4>
            </div>
          </button>
        ))}
      </div>

      <!-- Scope detail panels (dropdown-style, driven by scope-item clicks) -->
      <div class="scope-panels">
        {sortedServices.map((service, index) => (
          <div
            class={`tab-panel ${index === 0 ? 'active' : ''}`}
            id={`panel-${index}`}
            role="tabpanel"
            data-panel={`service-${index}`}
            aria-labelledby={`scope-${index}`}
          >
            <ServiceCard_2 service={service.data} />
          </div>
        ))}
      </div>
    </div>

    <!-- Tab row hidden; scope items are the single control (kept for a11y sync) -->
    <div class="tabs-nav tabs-nav-hidden" aria-hidden="true">
      {sortedServices.map((service, index) => (
        <button
          class={`tab-button ${index === 0 ? 'active' : ''}`}
          data-tab={`service-${index}`}
          role="tab"
          aria-selected={index === 0 ? 'true' : 'false'}
          aria-controls={`panel-${index}`}
          tabindex="-1"
        >
          <span class="tab-label">{service.data.title}</span>
        </button>
      ))}
    </div>
  </div>
</section>

<style>
  .services-editorial {
    --v2-bg-1: #070b14;
    --v2-bg-2: #0f172a;
    --v2-ink: #f4f7fb;
    --v2-muted: #9fb0c9;
    --v2-accent: #38bdf8;
    --v2-accent-strong: #0ea5e9;
    --v2-success: #22c55e;
    --v2-danger: #ef4444;

    background: linear-gradient(180deg, var(--v2-bg-1) 0%, var(--v2-bg-2) 100%);
    padding: 6rem 0;
    font-family: 'Inter', sans-serif;
  }

  /* Editorial Header */
  .editorial-header {
    max-width: 48rem;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .editorial-kicker {
    font-size: 0.72rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #7dd3fc;
    margin-bottom: 1rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .editorial-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    font-weight: 600;
    line-height: 1.1;
    color: var(--v2-ink);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .editorial-lead {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--v2-muted);
    max-width: 42rem;
    margin: 0 auto;
  }

  /* Definition Accordion */
  .definition-accordion {
    max-width: 56rem;
    margin: 0 auto 3rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .accordion-item {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    text-align: left;
    width: 100%;
  }

  .accordion-item:hover {
    border-color: rgba(56, 189, 248, 0.3);
    background: rgba(255, 255, 255, 0.05);
  }

  .accordion-item[aria-expanded="true"] {
    border-color: var(--v2-accent);
    background: rgba(56, 189, 248, 0.08);
  }

  .accordion-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
  }

  .accordion-number {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--v2-accent);
    line-height: 1;
    flex-shrink: 0;
  }

  .accordion-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--v2-ink);
    flex-grow: 1;
    margin: 0;
  }

  .accordion-icon {
    color: var(--v2-accent);
    flex-shrink: 0;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .accordion-item[aria-expanded="true"] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .accordion-item[aria-expanded="true"] .accordion-content {
    max-height: 500px;
  }

  .accordion-list {
    padding: 0 1.25rem 1.25rem 3.5rem;
    margin: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .accordion-list-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    font-size: 1rem;
    line-height: 1.6;
    color: #cbd5e1;
  }

  .list-marker {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    flex-shrink: 0;
    margin-top: 0.5rem;
  }

  .is-marker {
    background: var(--v2-success);
    box-shadow: 0 0 12px rgba(34, 197, 94, 0.5);
  }

  .isnt-marker {
    background: var(--v2-danger);
    box-shadow: 0 0 12px rgba(239, 68, 68, 0.5);
  }

  /* Scopes Section */
  .scopes-section {
    max-width: 64rem;
    margin: 0 auto 5rem;
  }

  .scopes-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .scopes-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2rem, 4.5vw, 3rem);
    font-weight: 700;
    color: var(--v2-ink);
    margin-bottom: 1rem;
  }

  .scopes-lead {
    font-size: 1rem;
    color: var(--v2-muted);
    max-width: 42rem;
    margin: 0 auto;
  }

  .scopes-timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 0;
  }

  @media (min-width: 768px) {
    .scopes-timeline {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .scope-item {
    position: relative;
    background: transparent;
    border: none;
    padding: 2rem 1.5rem;
    cursor: pointer;
    text-align: left;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-left: -1px; /* overlap to remove black seam between cells */
    min-width: 0;
  }

  .scope-item:first-child {
    margin-left: 0;
  }

  .scope-item:hover {
    background: rgba(56, 189, 248, 0.08);
  }

  .scope-item.active {
    background: rgba(56, 189, 248, 0.12);
    border-radius: 0.5rem;
    box-shadow: 0 0 0 1px rgba(56, 189, 248, 0.25);
  }

  .scope-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    position: relative;
    width: 100%;
  }

  .scope-node {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--v2-accent);
    box-shadow: 0 0 12px rgba(56, 189, 248, 0.4);
    position: relative;
    z-index: 2;
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 12px rgba(56, 189, 248, 0.4);
    }
    50% {
      box-shadow: 0 0 18px rgba(56, 189, 248, 0.6);
    }
  }

  .scope-line {
    position: absolute;
    left: 50%;
    width: 50%;
    height: 2px;
    background: linear-gradient(90deg, var(--v2-accent) 0%, rgba(56, 189, 248, 0.2) 100%);
    z-index: 1;
  }

  .scope-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .scope-number {
    font-size: 0.72rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #7dd3fc;
    font-family: 'JetBrains Mono', monospace;
  }

  .scope-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--v2-ink);
    line-height: 1.3;
    margin: 0;
  }

  .scope-number-badge {
    display: none;
  }

  /* Scope detail panels (below scopes timeline) */
  .scope-panels {
    position: relative;
    min-height: 500px;
    max-width: 64rem;
    margin: 0 auto;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .tabs-nav {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .tabs-nav-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .tab-button {
    background: transparent;
    border: none;
    padding: 1rem 1.5rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--v2-muted);
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
  }

  .tab-button:hover {
    color: var(--v2-accent);
  }

  .tab-button.active {
    color: var(--v2-ink);
    border-bottom-color: var(--v2-accent);
  }

  .tab-button::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--v2-accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .tab-button.active::after {
    transform: scaleX(1);
  }

  .tab-panel {
    opacity: 0;
    visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    transition: opacity 0.25s ease, visibility 0.25s ease;
  }

  .tab-panel.active {
    opacity: 1;
    visibility: visible;
    position: relative;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-editorial {
      padding: 4rem 0;
    }

    .editorial-header {
      margin-bottom: 3rem;
    }

    .definition-accordion {
      margin-bottom: 2.5rem;
    }

    .accordion-header {
      padding: 0.75rem 1rem;
      gap: 0.75rem;
    }

    .accordion-number {
      font-size: 1rem;
    }

    .accordion-title {
      font-size: 0.9375rem;
    }

    .accordion-list {
      padding: 0 1rem 1rem 3rem;
    }

    /* Mobile Scopes Section - Enhanced UX */
    .scopes-section {
      margin-bottom: 3rem;
    }

    .scopes-header {
      margin-bottom: 2.5rem;
    }

    .scopes-timeline {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 0.25rem;
      padding: 0.5rem 0;
      position: relative;
    }

    .scopes-timeline::-webkit-scrollbar {
      display: none;
    }

    /* No scroll on mobile â€“ all scopes visible */
    .scopes-timeline::after {
      display: none;
    }

    .scope-item {
      min-width: 0;
      max-width: none;
      margin-left: 0;
      padding: 0.5rem 0.25rem;
      border-radius: 0.75rem;
      border: 1px solid rgba(255, 255, 255, 0.06);
      background: rgba(255, 255, 255, 0.02);
      transition: all 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
      position: relative;
    }

    /* Tap hint for first scope */
    .scope-item:first-child::before {
      content: 'Tap to view';
      position: absolute;
      top: -1.75rem;
      left: 50%;
      transform: translateX(-50%);
      font-size: 0.625rem;
      color: rgba(125, 211, 252, 0.6);
      font-family: 'JetBrains Mono', monospace;
      letter-spacing: 0.05em;
      text-transform: uppercase;
      animation: mobile-hint-pulse 2s ease-in-out infinite;
      pointer-events: none;
    }

    @keyframes mobile-hint-pulse {
      0%, 100% { opacity: 0.5; }
      50% { opacity: 1; }
    }

    .scope-item:hover,
    .scope-item:active {
      transform: translateY(-2px);
      border-color: rgba(56, 189, 248, 0.3);
      background: rgba(56, 189, 248, 0.06);
    }

    .scope-item.active {
      background: rgba(56, 189, 248, 0.15);
      border-color: rgba(56, 189, 248, 0.4);
      box-shadow:
        0 0 0 1px rgba(56, 189, 248, 0.2),
        0 8px 24px rgba(56, 189, 248, 0.15);
      transform: translateY(-3px) scale(1.02);
    }

    /* Downward indicator on active scope */
    .scope-item.active::after {
      content: '';
      position: absolute;
      bottom: -0.625rem;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 0;
      border-left: 6px solid transparent;
      border-right: 6px solid transparent;
      border-top: 6px solid var(--v2-accent);
      opacity: 0.9;
      animation: mobile-bounce 1.2s ease-in-out infinite;
    }

    @keyframes mobile-bounce {
      0%, 100% { transform: translateX(-50%) translateY(0); }
      50% { transform: translateX(-50%) translateY(2px); }
    }

    .scope-line {
      display: none;
    }

    .scope-visual {
      display: none;
    }

    .scope-number {
      display: none;
    }

    .scope-number-badge {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 1.5rem;
      height: 1.5rem;
      border-radius: 50%;
      font-size: 0.75rem;
      font-weight: 700;
      font-family: 'Inter', sans-serif;
      color: var(--v2-accent);
      background: rgba(56, 189, 248, 0.15);
      border: 1px solid rgba(56, 189, 248, 0.35);
      margin-bottom: 0.25rem;
    }

    .scope-item.active .scope-number-badge {
      background: rgba(56, 189, 248, 0.25);
      border-color: rgba(56, 189, 248, 0.5);
    }

    .scope-title {
      font-size: 0.65rem;
      line-height: 1.2;
      font-weight: 600;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* Enhanced Panels Section */
    .scope-panels {
      min-height: auto;
      margin-top: 2rem;
      padding-top: 0;
      border-top: none;
      position: relative;
    }

    /* Detail label that appears when panel is active */
    .scope-panels::before {
      content: 'Scope Details';
      display: block;
      font-size: 0.625rem;
      font-family: 'JetBrains Mono', monospace;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: rgba(125, 211, 252, 0.7);
      text-align: center;
      margin-bottom: 1.25rem;
      opacity: 0;
      transform: translateY(-8px);
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .scope-panels.has-active::before {
      opacity: 1;
      transform: translateY(0);
    }

    .tab-panel {
      opacity: 0;
      visibility: hidden;
      position: absolute;
      top: 2rem;
      left: 0;
      right: 0;
      transform: translateY(16px) scale(0.98);
      transition:
        opacity 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
        transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
        visibility 0.4s;
    }

    .tab-panel.active {
      opacity: 1;
      visibility: visible;
      position: relative;
      top: 0;
      transform: translateY(0) scale(1);
      animation: mobile-panel-reveal 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    @keyframes mobile-panel-reveal {
      0% {
        opacity: 0;
        transform: translateY(24px) scale(0.96);
      }
      60% {
        transform: translateY(-4px) scale(1.01);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .tabs-nav {
      flex-wrap: nowrap;
      justify-content: flex-start;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Accordion functionality
    const accordionItems = document.querySelectorAll('[data-accordion]');
    accordionItems.forEach(item => {
      item.addEventListener('click', () => {
        const isExpanded = item.getAttribute('aria-expanded') === 'true';
        accordionItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.setAttribute('aria-expanded', 'false');
          }
        });
        item.setAttribute('aria-expanded', (!isExpanded).toString());
      });
    });

    // Scope items drive panels (single control; tab row is hidden)
    const scopeItems = document.querySelectorAll('.scope-item');
    const tabPanels = document.querySelectorAll('.tab-panel');
    const tabButtons = document.querySelectorAll('.tab-button');
    const scopePanelsContainer = document.querySelector('.scope-panels');
    const scopesTimeline = document.querySelector('.scopes-timeline');

    function setActiveScope(index) {
      scopeItems.forEach((el, i) => {
        const isActive = i === index;
        el.classList.toggle('active', isActive);
        el.setAttribute('aria-expanded', isActive ? 'true' : 'false');
      });
      tabPanels.forEach((panel, i) => {
        panel.classList.toggle('active', i === index);
      });
      tabButtons.forEach((btn, i) => {
        btn.classList.toggle('active', i === index);
        btn.setAttribute('aria-selected', i === index ? 'true' : 'false');
      });

      // Add has-active class for mobile detail label
      if (scopePanelsContainer) {
        scopePanelsContainer.classList.add('has-active');
      }
    }

    function centerScopeInTimeline(scopeItem) {
      if (!scopesTimeline || !scopeItem) return;

      const timelineRect = scopesTimeline.getBoundingClientRect();
      const itemRect = scopeItem.getBoundingClientRect();
      const scrollLeft = scopesTimeline.scrollLeft;

      // Calculate the position to center the item
      const itemCenter = itemRect.left - timelineRect.left + (itemRect.width / 2);
      const timelineCenter = timelineRect.width / 2;
      const targetScroll = scrollLeft + itemCenter - timelineCenter;

      scopesTimeline.scrollTo({
        left: targetScroll,
        behavior: 'smooth'
      });
    }

    scopeItems.forEach((scopeItem) => {
      scopeItem.addEventListener('click', () => {
        const index = parseInt(scopeItem.getAttribute('data-scope') ?? '0', 10);
        setActiveScope(index);

        if (window.matchMedia('(max-width: 768px)').matches) {
          // Center the clicked scope in the timeline
          centerScopeInTimeline(scopeItem);

          // Smooth scroll to panels with a slight delay for better UX
          setTimeout(() => {
            if (scopePanelsContainer) {
              const headerOffset = 80;
              const elementPosition = scopePanelsContainer.getBoundingClientRect().top;
              const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

              window.scrollTo({
                top: offsetPosition,
                behavior: 'smooth'
              });
            }
          }, 200);
        }
      });
    });
  });
</script>
