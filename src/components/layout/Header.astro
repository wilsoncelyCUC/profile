---
import { resolveBookingUrl, siteConfig } from '../../data/site-config';

const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'Method', href: '#how-we-work' },
  { label: 'Best Fit', href: '#best-fit' },
  { label: 'Contact', href: '#contact' },
];

const bookingUrl = resolveBookingUrl(siteConfig.hero.primaryCta.href);
---

<header
  x-data="{ scrolled: false, mobileMenuOpen: false }"
  x-init="window.addEventListener('scroll', () => { scrolled = window.scrollY > 20 })"
  :class="{ 'bg-navy-950/95 backdrop-blur border-b border-navy-800': scrolled, 'bg-transparent': !scrolled }"
  class="fixed left-0 right-0 top-0 z-50 transition-all duration-300"
>
  <nav class="content-shell">
    <div class="flex h-20 items-center justify-between">
      <a href="#hero" class="text-lg font-bold tracking-tight text-white">Wilson Cely</a>

      <div class="hidden items-center gap-8 md:flex">
        {navItems.map((item) => (
          <a href={item.href} class="text-sm font-medium text-slate-300 hover:text-cyan-400">{item.label}</a>
        ))}
        <a href={bookingUrl} target="_blank" rel="noopener noreferrer" class="btn-primary px-5 py-2.5 text-sm">
          Book a Discovery Call
        </a>
      </div>

      <button
        @click="mobileMenuOpen = !mobileMenuOpen"
        class="text-slate-200 md:hidden"
        aria-label="Toggle menu"
      >
        <svg x-show="!mobileMenuOpen" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg x-cloak x-show="mobileMenuOpen" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div
      x-cloak
      x-show="mobileMenuOpen"
      x-transition
      class="mb-4 space-y-2 rounded-xl border border-navy-800 bg-navy-900 p-4 md:hidden"
    >
      {navItems.map((item) => (
        <a
          href={item.href}
          @click="mobileMenuOpen = false"
          class="block rounded-lg px-3 py-2 text-sm text-slate-300 hover:bg-navy-800 hover:text-cyan-400"
        >
          {item.label}
        </a>
      ))}
      <a
        href={bookingUrl}
        target="_blank"
        rel="noopener noreferrer"
        @click="mobileMenuOpen = false"
        class="btn-primary mt-2 w-full"
      >
        Book a Discovery Call
      </a>
    </div>
  </nav>
</header>
